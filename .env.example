# ============================================================
# STARVIS — Configuration
# Copy to .env and edit values
# ============================================================

# --- Server ---
API_PORT=3003                # Port exposé sur l'hôte (dev local uniquement)
API_INTERNAL_PORT=3000       # Port interne du container (ne pas changer)
NODE_ENV=production
LOG_LEVEL=info               # debug | info | warn | error

# --- Security ---
ADMIN_API_KEY=change_me      # Clé admin (header X-API-Key)
CORS_ORIGIN=*                # Dev: *  |  Prod: https://starvis.ampynjord.bzh

# --- MySQL ---
DB_HOST=mysql                # Nom du service docker-compose
DB_PORT=3306                 # Port interne MySQL (dans le réseau docker)
DB_EXTERNAL_PORT=3306        # Port exposé sur l'hôte (dev: outils SQL locaux)
DB_USER=starvis_user
DB_PASSWORD=change_me
DB_NAME=starvis
MYSQL_ROOT_PASSWORD=change_me

# --- IHM (Frontend) ---
IHM_PORT=8080                # Port exposé (dev local uniquement)

# --- Production (VPS + Traefik) ---
# Les ports ne sont pas utilisés en prod (Traefik gère le routage)
# COMPOSE_FILE=docker-compose.yml:docker-compose.prod.yml

